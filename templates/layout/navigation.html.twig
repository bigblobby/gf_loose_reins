        </ul>
    </div>
    <div class="logo-container">
        <a href="{{ path('app_default_homepage') }}">
            <img class="main-logo" src="{{ asset('images/homepage/LooseReinsLogo.svg') }}" alt="logo">
        </a>
    </div>
    <div class="bottom-nav-container">
        <ul class="bottom-nav">

            {# @var link \App\Entity\MainPage #}
            {% for link in main_navigation() %}
                <li><a class="{{ link.slug == app.request.attributes.get('mainSlug') ? 'active' }}" href="{{ path('app_default_page', {'mainSlug': link.slug}) }}">{{ link.title}}</a></li>
