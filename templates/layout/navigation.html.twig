    </div>

    {# @var sublink \App\Entity\Page #}
    {% if subPages is defined %}
        <div class="dropdown-nav-container">
            <ul class="dropdown-nav">
                {% for subPage in subPages %}
                    {% if subPage.title is not empty %}
                        <li><a class="sublink {{ subPage.slug == app.request.attributes.get('slug') ? 'active' }}" href="{{ path('app_default_page', {'mainSlug': subPage.parent.slug, 'slug': subPage.slug }) }}">{{ subPage.title }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    {% endif %}

