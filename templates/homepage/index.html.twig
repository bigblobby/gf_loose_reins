{% extends 'base.html.twig' %}

{% block title %}Welcome to Loose Reins | Loose Reins{% endblock %}

{% block body %}

    {#---------Header----------#}
    <div class="homepage-header">
        <div class="homepage-image-container"></div>
        <div class="homepage-banner">
            {{ homepage.headerContent|raw }}
        </div>
    </div>

    {#---------Box One----------#}
    {% if homepage.boxOneContent is defined %}
        {% include "partials/image-text-split.html.twig" with { "content": homepage.boxOneContent, "image": homepage.boxOneImage } only %}
    {% endif %}

    {#---------Box Two----------#}
    {% if homepage.boxTwoContent is defined %}
        {% include "partials/image-text-overlay.html.twig" with { "content": homepage.boxTwoContent, "image": homepage.boxTwoImage } only %}
    {% endif %}

    {% include "partials/blog-article-preview.html.twig" %}
    {% include "partials/four-ctas.html.twig" %}

{% endblock %}
