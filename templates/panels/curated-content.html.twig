{% if pages is defined %}
    {% for page in pages %}
        {% if loop.index is odd %}
            {% include "partials/image-text-split.html.twig" with {"content": page.preview, "image": page.previewImage} only %}
        {% else %}
            {% include "partials/image-text-overlay.html.twig" with {"content": page.preview, "image": page.previewImage} only %}
        {% endif %}
    {% endfor %}
{% else %}
    {% for panel in panels %}
        {% if loop.index is odd %}
            {% include "partials/image-text-split.html.twig" with {"content": panel.content, "image": panel.image } only %}
        {% else %}
            {% include "partials/image-text-overlay.html.twig" with {"content": panel.content, "image": panel.image } only %}
        {% endif %}
    {% endfor %}
{% endif %}