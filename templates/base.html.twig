<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,400" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700" rel="stylesheet">
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% endblock %}
    </head>
    <body>

        {#-------------MAIN NAVIGATION-------------#}

        <nav class="header-container">
            <div class="top-nav-container">
                <ul class="top-nav">
                    <li><a href="#">Book</a></li>
                    <li><a href="#">Before you book</a></li>
                    <li><a href="#">Offers</a></li>
                    <li><a href="#">Gallery</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </div>
            <div class="logo-container">
                <a href="{{ path('app_default_homepage') }}">
                    <img class="main-logo" src="{{ asset('images/homepage/LooseReinsLogo.svg') }}" alt="logo">
                </a>
            </div>
            <div class="bottom-nav-container">
                <ul class="bottom-nav">
                    <li><a class="{{ app.request.attributes.get('_route') == 'app_default_cabins' ? 'active' : '' }}" href="{{ path('app_default_cabins') }}">Cabins</a></li>
                    <li><a class="{{ app.request.attributes.get('_route') == 'app_default_lodges' ? 'active' : '' }}" href="{{ path('app_default_lodges') }}">Lodges</a></li>
                    <li><a class="{{ app.request.attributes.get('_route') == 'app_default_loose_reins_country' ? 'active' : '' }}" href="{{ path('app_default_loose_reins_country') }}">Loose Reins Country</a></li>
                    <li><a class="{{ app.request.attributes.get('_route') == 'app_default_out_and_about' ? 'active' : '' }}" href="{{ path('app_default_out_and_about') }}">Out And About</a></li>
                    <li><a class="{{ app.request.attributes.get('_route') == 'app_default_pantry' ? 'active' : '' }}" href="{{ path('app_default_pantry') }}">Pantry</a></li>
                    <li><a class="{{ app.request.attributes.get('_route') == 'app_default_loose_talk' ? 'active' : '' }}" href="{{ path('app_default_loose_talk') }}">Loose Talk</a></li>
                    <li><a class="{{ app.request.attributes.get('_route') == 'app_default_reviews' ? 'active' : '' }}" href="{{ path('app_default_reviews') }}">Reviews</a></li>
                    <li class="mobile-nav-item"><a href="#">Book</a></li>
                    <li class="mobile-nav-item"><a href="#">Before you book</a></li>
                    <li class="mobile-nav-item"><a href="#">Offers</a></li>
                    <li class="mobile-nav-item"><a href="#">Gallery</a></li>
                    <li class="mobile-nav-item"><a href="#">Contact</a></li>
                </ul>
            </div>
            {# @var sublink \App\Entity\Page #}
            {% if subPages is defined %}
                <div class="dropdown-nav-container">
                    <ul class="dropdown-nav">
                        {% for subPage in subPages %}
                            {% if subPage.title is not empty %}
                                <li><a class="sublink {{ subPage.slug in app.request.pathInfo ? 'active' }}" href="{{ path(subPage.route, {"slug": subPage.slug}) }}">{{ subPage.title }}</a></li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}


            <button class="mobile-menu-btn">
                <span class="menu-line"></span>
                <span class="menu-line"></span>
                <span class="menu-line"></span>
            </button>
        </nav>

        {#------------CONTENT-------------#}

        {% block body %}{% endblock %}

        {#------------FOOTER--------------#}

        <footer class="footer">
            <div class="left-container">
                <address>
                    Loose Reins,<br>
                    Ridgeway Farm,<br>
                    Shillingstone,<br>
                    Dorset,<br>
                    DT11 0TF
                </address>
            </div>
            <div class="right-container">
                {% include "partials/social-icons.html.twig" %}
                <p class="contact-number">01258 863533</p>
                <div class="footer-nav">
                    <a href="#">FAQs</a>
                    <a href="#">Accessibility Guide</a>
                    <a href="#">Terms &amp; Conditions</a>
                    <a href="#">Eco Policy</a>
                    <a href="#">Privacy</a>
                </div>
                <button class="signup">Signup</button>
                <p class="copyright">Website by Tom Dempster</p>
            </div>
        </footer>

        {#---------------STICKY BOOK NOW BUTTON-----------------#}

        {% block sticky_book_now %}
            <div class="booking-bar">
                <button class="booking-button">Book Now</button>
                <div></div>
            </div>
        {% endblock %}

        {#----------------STICKY SOCIAL ICONS-------------------#}

        {% block sticky_social_icons %}
            <div class="sticky-social-icons">
                {% include "partials/social-icons.html.twig" %}
            </div>
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('build/runtime.js') }}"></script>
            <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
